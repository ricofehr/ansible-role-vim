set enc=utf-8
set fenc=utf-8
set termencoding=utf-8
" disable vi compatibility (emulation of old bugs)
set nocompatible

" remove space at end of lines before write buffer
" autocmd BufWritePre * %s/\s\+$//

filetype on             " enable filetype detection
filetype indent on      " enable filetype-specific indenting
filetype plugin on      " enable filetype-specific plugins
" use indentation of previous line
set autoindent
" use intelligent indentation for C
set smartindent
" configure tabwidth and insert spaces instead of tabs
set tabstop=2        " tab width is 4 spaces
set shiftwidth=2     " indent also with 4 spaces
" set noexpandtab
set expandtab        " expand tabs to spaces
" wrap lines at 120 chars. 80 is somewaht antiquated with nowadays displays.
" set textwidth=120
" turn syntax highlighting on
set t_Co=256
syntax on
" remove endspace line
autocmd BufWritePre * %s/\s\+$//e
" autocmd FileType js,c,cpp,java,php,javascript,ruby,yaml,bash autocmd BufWritePre <buffer> %s/\s\+$//e
colorscheme wombat256
" turn line numbers on
set number
" highlight matching braces
set showmatch
set cursorline
set nobackup
set autoread
set scrolloff=5
set noerrorbells        " turn off audio bell
set visualbell          " but leave on a visual bell
" intelligent comments
set comments=sl:/*,mb:\ *,elx:\ */

" add python suffixes
set suffixesadd+=.py

" set history to last 500 commands
set history=500

" set autocompletion in a zsh-like display
set wildmenu
set wildmode=full

" set ack as grep command
set grepprg=ack\ --nogroup\ $*
set grepformat=%f:%l:%c:%m

" disable arrow keys
noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>

" enable highlight search
set hlsearch
" enable dynamic match
set incsearch

" Install OmniCppComplete like described on http://vim.wikia.com/wiki/C++_code_completion
" This offers intelligent C++ completion when typing ‘.’ ‘->’ or <C-o>
" Load standard tag files
set tags+=~/.vim/tags/cpp
set tags+=~/.vim/tags/gl
set tags+=~/.vim/tags/sdl
set tags+=~/.vim/tags/qt4
set re=2
